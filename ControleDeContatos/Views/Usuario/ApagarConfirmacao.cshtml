@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)? </h3>
</div>

<div class="d-grid gap-2 mt-2">
    <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a role="button" class="btn btn-danger" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
</div>

